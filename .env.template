# =============================================================================
# NotaireAI - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# SUPABASE (REQUIRED for client data management)
# -----------------------------------------------------------------------------
# Get these from Supabase Dashboard > Settings > API
# IMPORTANT: Use EU region (Frankfurt or Paris) for GDPR compliance

SUPABASE_URL=https://your-project-id.supabase.co

# New Publishable Keys (Dashboard > Settings > API > "Publishable and secret API keys")
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-key-here
SUPABASE_SECRET_KEY=sb_secret_your-key-here

# Legacy JWT Keys (Dashboard > Settings > API > scroll down to "Legacy JWT" section)
# REQUIRED for Python SDK compatibility
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# ENCRYPTION (REQUIRED for PII protection)
# -----------------------------------------------------------------------------
# Generate with: python execution/encryption_service.py generate-key
# CRITICAL: Store this securely! Loss = data loss!

ENCRYPTION_MASTER_KEY=your-base64-encoded-256-bit-key

# Optional: Key rotation identifier
ENCRYPTION_KEY_ID=v1

# -----------------------------------------------------------------------------
# AGENT IDENTITY (for audit trail)
# -----------------------------------------------------------------------------
AGENT_USER_ID=agent-notaire-ia
AGENT_NAME=NotaireAI Agent

# -----------------------------------------------------------------------------
# AI PROVIDERS
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxx
# OPENAI_API_KEY=sk-xxxxx

# -----------------------------------------------------------------------------
# GOOGLE API (optional)
# -----------------------------------------------------------------------------
# Get these from Google Cloud Console: https://console.cloud.google.com/
# GOOGLE_CLIENT_ID=your_client_id_here
# GOOGLE_CLIENT_SECRET=your_client_secret_here
# GOOGLE_SHEETS_API_KEY=your_api_key_here
# GOOGLE_SLIDES_API_KEY=your_api_key_here

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Session timeout (minutes)
SESSION_TIMEOUT=30

# Enable audit logging
ENABLE_AUDIT=true

# Log PII access (for GDPR compliance)
LOG_PII_ACCESS=true

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
DEBUG=False
LOG_LEVEL=INFO
