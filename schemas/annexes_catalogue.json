{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "titre": "Catalogue des Annexes Notariales",
  "description": "Base de données évolutive des types d'annexes pour actes notariaux",
  "version": "1.0.0",
  "derniere_mise_a_jour": "2025-01-19",
  "statistiques": {
    "total_annexes": 28,
    "categories": 6
  },
  "categories": {
    "plans_cadastre": {
      "description": "Plans et documents cadastraux",
      "annexes": [
        {
          "id": "plan_cadastral",
          "nom": "Plan cadastral",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "description": "Extrait de plan cadastral de la commune",
          "source_obtention": "cadastre.gouv.fr"
        },
        {
          "id": "plan_geoportail",
          "nom": "Plan Géoportail vue aérienne",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "description": "Vue aérienne avec délimitation du bien",
          "source_obtention": "geoportail.gouv.fr"
        },
        {
          "id": "plan_lots",
          "nom": "Plans des lots",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "copropriete",
          "description": "Plan de l'étage, plan de masse pour parking/cave"
        },
        {
          "id": "plan_masse",
          "nom": "Plan de masse",
          "obligatoire": false,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "bien.lots.parking ou bien.lots.cave",
          "description": "Emplacement des stationnements et caves"
        }
      ]
    },

    "diagnostics_techniques": {
      "description": "Dossier de diagnostics techniques (DDT)",
      "annexes": [
        {
          "id": "diagnostic_carrez",
          "nom": "Diagnostic Carrez (mesurage)",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "lot.type in ['appartement', 'local_commercial', 'bureau'] and lot.superficie > 8",
          "validite": "illimitée sauf travaux",
          "description": "Attestation de superficie loi Carrez"
        },
        {
          "id": "diagnostic_dpe",
          "nom": "Diagnostic de Performance Énergétique (DPE)",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "validite": "10 ans",
          "description": "Classes énergie et GES du bien"
        },
        {
          "id": "diagnostic_amiante_pp",
          "nom": "Diagnostic amiante parties privatives",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "immeuble.date_construction < 1997-01-01",
          "validite": "illimitée si négatif, 3 ans si positif",
          "description": "État d'amiante des parties privatives"
        },
        {
          "id": "diagnostic_amiante_pc",
          "nom": "Diagnostic amiante parties communes",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "copropriete and immeuble.date_construction < 1997-01-01",
          "validite": "illimitée si négatif",
          "description": "Dossier technique amiante parties communes"
        },
        {
          "id": "diagnostic_plomb",
          "nom": "Constat de Risque d'Exposition au Plomb (CREP)",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "immeuble.date_construction < 1949-01-01",
          "validite": "1 an si positif, illimité si négatif",
          "description": "Présence de plomb dans les peintures"
        },
        {
          "id": "diagnostic_electricite",
          "nom": "État de l'installation intérieure d'électricité",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "installation_electrique.age > 15",
          "validite": "3 ans",
          "description": "Conformité de l'installation électrique"
        },
        {
          "id": "diagnostic_gaz",
          "nom": "État de l'installation intérieure de gaz",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "installation_gaz.existe and installation_gaz.age > 15",
          "validite": "3 ans",
          "description": "Conformité de l'installation gaz"
        },
        {
          "id": "diagnostic_termites",
          "nom": "État relatif à la présence de termites",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "bien.zone_termites == true",
          "validite": "6 mois",
          "description": "Présence d'insectes xylophages"
        },
        {
          "id": "etat_risques",
          "nom": "État des Risques et Pollutions (ERP)",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "validite": "6 mois",
          "description": "Risques naturels, miniers, technologiques, sismiques, radon",
          "source_obtention": "georisques.gouv.fr"
        },
        {
          "id": "audit_energetique",
          "nom": "Audit énergétique",
          "obligatoire": true,
          "type_acte": ["promesse_vente", "compromis", "vente"],
          "condition": "diagnostics.dpe.classe_energie in ['F', 'G'] and not copropriete",
          "validite": "5 ans",
          "description": "Audit pour passoires thermiques (hors copropriété)"
        },
        {
          "id": "carnet_info_logement",
          "nom": "Carnet d'information du logement",
          "obligatoire": true,
          "type_acte": ["vente"],
          "condition": "logement_neuf or travaux_renovation_energetique",
          "description": "Informations sur les travaux et équipements"
        }
      ]
    },

